{
  "name": "UKVI-Complaints",
  "version": "0.0.1",
  "main": "app.js",
  "description": "UKVI Complaints form",
  "license": "GPLv2",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/UKVI-Complaints"
  },
  "scripts": {
    "start": "node .",
    "dev": "npm-run-all --parallel watch:app watch:scss watch:js watch:translations",
    "watch:app": "NODE_ENV=development nodemon .",
    "watch:scss": "nodemon -e scss -x 'npm run sass'",
    "watch:js": "nodemon --watch assets/js -x 'npm run browserify'",
    "watch:translations": "nodemon --watch apps/complaints/translations/src -x 'npm run hof-transpile'",
    "test": "NODE_ENV=test mocha",
    "browserify": "browserify ./assets/js/index.js > ./public/js/bundle.js",
    "test:ci": "npm run lint && npm run style && npm run test",
    "lint": "eslint .",
    "copy:images": "cp -r ./assets/images ./public/",
    "style": "jscs **/*.js --config=./.jscsrc",
    "sass": "node-sass ./assets/scss/app.scss ./public/css/app.css --include-path ./node_modules",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src -w --shared ./apps/common/translations/src",
    "postinstall": "npm run create:public; npm run sass; npm run browserify; npm run copy:images; npm run hof-transpile"
  },
  "author": "HomeOffice",
  "dependencies": {
    "body-parser": "^1.13.0",
    "browserify": "^12.0.1",
    "connect-redis-crypto": "^2.1.0",
    "cookie-parser": "^1.3.5",
    "express": "^4.12.4",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.11.3",
    "hof": "^8.0.0",
    "hogan-express-strict": "^0.5.4",
    "lodash": "^4.13.1",
    "node-sass": "3.5.0-beta.1",
    "redis": "^0.12.1",
    "winston": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^0.23.0",
    "eslint-config-homeoffice": "^0.1.4",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-mocha": "^0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "hof-transpiler": "0.0.5",
    "jscs": "^1.13.1",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "nodemon": "^1.9.0",
    "npm-run-all": "^2.1.1",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0"
  },
  "pre-commit": [
    "lint",
    "style",
    "test"
  ]
}
